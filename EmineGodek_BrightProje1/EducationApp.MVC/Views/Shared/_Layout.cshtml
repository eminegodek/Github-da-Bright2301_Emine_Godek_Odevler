<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EducationApp.MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EducationApp.MVC.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <!-- Navigation-->
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
        <div class="container-fluid">
            
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/img/00.png" /></a>

           
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                @await Html.PartialAsync("_MenuPartial")
            </div>
        </div>
    </nav>
    <!-- Header-->
    <header class="masthead-heading text-center text-white">
        <br /> <br />
        <img src="~/images/img/anasayfa.jpg" class="img-fluid" alt="...">
        <br /> <br />
        <div class="masthead-content">
            <div class="container px-1">
                <h2 style="color:orange" class="masthead-heading mb-0">Emine GÖDEK Yemek Okulu'na Hoş Geldiniz! <br /> Sofralarınıza en güzel renkleri eklemek için doğru yerdesiniz.</h2>
            </div>
        </div>
       
    </header>

    <br />
   
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <br /><br />
    
        <footer class="border-top footer text-muted" style="background-color:orange">
            <div class="container text-center">
                &copy; 2023 - EMGYemekOkulu - TümHakkıSaklıdır - eminegodekk@gmail.com <a asp-area="" asp-controller="" asp-action=""></a>
            </div>
        </footer>
    
   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
